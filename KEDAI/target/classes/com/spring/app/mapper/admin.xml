<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="admin">

	<select id="dept_select" resultType="com.spring.app.domain.DeptVO">
		select dept_code, dept_name
		from tbl_dept
		order by dept_code asc
	</select>
	
	<select id="job_select" resultType="com.spring.app.domain.JobVO">
		select job_code, job_name
		from tbl_job
		order by job_code asc
	</select>
	
	<select id="idDuplicateCheck" resultType="String">
		select empid
		from tbl_employees
		where empid = #{empid}
	</select>
	
	<select id="emailDuplicateCheck" resultType="String">
		select email
		from tbl_employees
		where email = #{email}
	</select>
	
	<insert id="empRegister" parameterType="MemberVO">
		<if test="fk_dept_code == null || dept_tel == null">
			
			insert into tbl_employees(empid,pwd,name,nickname,jubun,email,mobile,postcode,address,detailaddress,extraaddress,imgfilename,hire_date,salary,commission_pct,fk_dept_code,fk_job_code,dept_tel)
			values(#{empid},#{pwd},#{name},#{nickname},#{jubun},#{email},#{mobile},#{postcode},#{address},#{detailaddress},#{extraaddress},'test',to_date(#{hire_date}, 'yyyy-mm-dd'),to_number(#{salary}),0, null, null, null)
		</if>
		
		<if test="fk_job_code == null">
			<if test="fk_dept_code == null || dept_tel == null">
			insert into tbl_employees(empid,pwd,name,nickname,jubun,email,mobile,postcode,address,detailaddress,extraaddress,imgfilename,hire_date,salary,commission_pct,fk_dept_code,fk_job_code,dept_tel)
			values(#{empid},#{pwd},#{name},#{nickname},#{jubun},#{email},#{mobile},#{postcode},#{address},#{detailaddress},#{extraaddress},'test',to_date(#{hire_date}, 'yyyy-mm-dd'),to_number(#{salary}),0, null, null, null)
			
		</if>
		
		<if test="fk_job_code == null && (fk_dept_code == null || dept_tel == null)">
			insert into tbl_employees(empid,pwd,name,nickname,jubun,email,mobile,postcode,address,detailaddress,extraaddress,imgfilename,hire_date,salary,commission_pct,fk_dept_code,fk_job_code,dept_tel)
			values(#{empid},#{pwd},#{name},#{nickname},#{jubun},#{email},#{mobile},#{postcode},#{address},#{detailaddress},#{extraaddress},'test',to_date(#{hire_date}, 'yyyy-mm-dd'),to_number(#{salary}),0, null, null, null)
		</if>
		
		
		
		<if test="fk_dept_code != null">
			insert into tbl_employees(empid,pwd,name,nickname,jubun,email,mobile,postcode,address,detailaddress,extraaddress,imgfilename,hire_date,salary,commission_pct,fk_dept_code,fk_job_code,dept_tel)
			values(#{empid},#{pwd},#{name},#{nickname},#{jubun},#{email},#{mobile},#{postcode},#{address},#{detailaddress},#{extraaddress},'test',to_date(#{hire_date}, 'yyyy-mm-dd'),to_number(#{salary}),0,#{fk_dept_code}, #{fk_job_code},#{dept_tel})
		</if>
		
		<if test="fk_job_code != null">
			insert into tbl_employees(empid,pwd,name,nickname,jubun,email,mobile,postcode,address,detailaddress,extraaddress,imgfilename,hire_date,salary,commission_pct,fk_dept_code,fk_job_code,dept_tel)
			values(#{empid},#{pwd},#{name},#{nickname},#{jubun},#{email},#{mobile},#{postcode},#{address},#{detailaddress},#{extraaddress},'test',to_date(#{hire_date}, 'yyyy-mm-dd'),to_number(#{salary}),0, null, null, null)
		</if>
	</insert>

</mapper>